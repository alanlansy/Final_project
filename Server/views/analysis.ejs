  </div>
  <script>
    getTopCrimes(function (data) {
      for (i = 0; i <= 10; i++) {
        var markup = "<tr><td>" + data.records[i]['_fields'][0] + "</td>" + "<td >" + data.records[i]['_fields'][1]['low'] + "</td></tr>"
        $("#topCrimes").append(markup)
      }

    })

  </script>


  <!--Top Hotspots-->
