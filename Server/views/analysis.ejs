  <script>

    getTriangleCount(function (data) {
      for (i = 0; i <= 9; i++) {
        var markup = "<tr><td>" + data.records[i]['_fields'][0] + "</td>" + "<td >" + data.records[i]['_fields'][1] + "</td>" + "<td >" + data.records[0]['_fields'][2]['low'] + "<td ><button onclick=" + "get('" + data.records[i]['_fields'][1] + "')>Get Graph</button></td></tr>"
        $("#triangle").append(markup)
      }

    })


    function get(dat) {
      window.location.href = "/showtriangle?q=" + dat
    }


  </script>
